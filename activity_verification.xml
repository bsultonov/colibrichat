<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Verification">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_code"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Please enter the code below."
        android:textColor="@color/colorTransparentWhite"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Verification"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />


    <Button
        android:id="@+id/verify_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/code_error"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rectangle_orange"
        android:text="@string/next_btn"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_above="@+id/user_phone"
        android:layout_centerHorizontal="true"
        android:text="We have sent a message with a verification code to"
        android:gravity="center"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/code_error"
        android:layout_centerHorizontal="true"
        android:ems="4"
        android:gravity="center"
        android:hint="Code"
        android:inputType="numberDecimal"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorTransparentWhite"
        android:textColorLink="@color/colorOrange"
        />

    <TextView
        android:id="@+id/code_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:text="Invalid verification code"
        android:textColor="@color/colorOrange"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

</RelativeLayout>